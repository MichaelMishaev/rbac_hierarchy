{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Additional strict type-checking for regression prevention
    // "noUncheckedIndexedAccess": true, // Disabled for Railway builds
    // "noImplicitReturns": true, // Disabled for Railway builds
    "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true, // Disabled for Railway builds
    // "noUnusedParameters": true, // Disabled for Railway builds
    // "exactOptionalPropertyTypes": true, // Disabled: causes issues with Prisma optional fields
    // "noPropertyAccessFromIndexSignature": true // Disabled for Railway builds
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "scripts/**/*",
    "playwright.config.ts"
  ]
}
