{
  "name": "hierarchy-platform",
  "version": "1.0.0",
  "description": "Multi-tenant organizational management system for corporations",
  "private": true,
  "scripts": {
    "dev": "cd app && npm run dev",
    "build": "cd app && npm install && npm run build",
    "start": "cd app && npm run start",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "playwright install",
    "db:generate": "cd app && npx prisma generate",
    "db:push": "cd app && npx prisma db push",
    "db:seed": "cd app && npx tsx prisma/seed.ts",
    "db:studio": "cd app && npx prisma studio",
    "db:reset": "cd app && npx prisma db push --force-reset && npm run db:seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "hierarchy",
    "rbac",
    "multi-tenant",
    "nestjs",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^20.17.6",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
