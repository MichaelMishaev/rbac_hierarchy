# ============================================
# ENVIRONMENT VARIABLES - DEVELOPMENT
# ============================================
# Copy this file to .env and customize as needed

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5434/hierarchy_platform
DATABASE_URL_POOLED=postgresql://postgres:postgres_dev_password@localhost:6433/hierarchy_platform?pgbouncer=true

# Database Roles
DB_APP_USER=app_user
DB_APP_PASSWORD=app_user_dev_password
DB_READONLY_USER=app_readonly
DB_READONLY_PASSWORD=readonly_dev_password
DB_MIGRATION_USER=migration_user
DB_MIGRATION_PASSWORD=migration_dev_password

# Redis Configuration
REDIS_URL=redis://:redis_dev_password@localhost:6381

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev_refresh_secret_change_in_production_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# OAuth2/OIDC (WorkOS example)
# WORKOS_API_KEY=sk_test_...
# WORKOS_CLIENT_ID=client_...
# WORKOS_REDIRECT_URI=http://localhost:3001/auth/callback

# Email Configuration (Mailhog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@localhost

# Application Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Observability
# SENTRY_DSN=
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_SOCIAL_LOGIN=false
REQUIRE_EMAIL_VERIFICATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
